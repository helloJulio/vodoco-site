      const phone = get('q_phone');
      const email = get('q_email');
      const service = get('q_service');
      const bedrooms = get('q_bedrooms');
      const bathrooms = get('q_bathrooms');
      const address = get('q_address');
      const date = get('q_date');
      const notes = get('q_notes');

      // Build message
      const subject = encodeURIComponent('Free Quote Request â€“ ' + name);
      const body = encodeURIComponent(
        'Hi Vodoco,%0A%0A' +
        'Name: ' + name + '%0A' +
        'Phone: ' + phone + '%0A' +
        'Email: ' + email + '%0A' +
        'Service: ' + service + '%0A' +
        'Bedrooms: ' + bedrooms + '%0A' +
        'Bathrooms: ' + bathrooms + '%0A' +
        'Address: ' + address + '%0A' +
        'Preferred date: ' + date + '%0A' +
        'Notes: ' + notes + '%0A%0A' +
        'Thanks!'
      );

      // Email link
      const mailto = 'mailto:hello.vodoco@outlook.com?subject=' + subject + '&body=' + body;

      // WhatsApp link
      const wa = 'https://wa.me/61413387095?text=' + body;

